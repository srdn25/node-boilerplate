{
  "name": "node-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate for node server",
  "main": "index.js",
  "engines": {
    "node": "20.10.0",
    "npm": "10.2.3"
  },
  "scripts": {
    "start": "node --env-file=.env index.js",
    "dev": "NODE_ENV=dev node --env-file=.env index.js",
    "lint": "eslint . --ext .js,.ts --fix",
    "test": "NODE_ENV=test jest --forceExit --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --forceExit --detectOpenHandles --watch",
    "test:cov": "NODE_ENV=test jest --forceExit --detectOpenHandles --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:srdn25/node-boilerplate.git"
  },
  "keywords": [
    "node",
    "jest",
    "lint",
    "server"
  ],
  "author": "srdn25",
  "license": "SEE LICENCE IN LICENCE",
  "bugs": {
    "url": "https://github.com/srdn25/node-boilerplate/issues"
  },
  "homepage": "https://github.com/srdn25/node-boilerplate#readme",
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^12.0.1",
    "koa2-cors": "^2.0.6",
    "koa2-swagger-ui": "^5.10.0",
    "pino": "^8.17.2",
    "swagger-jsdoc": "^6.2.8"
  }
}
